<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="vertical"
            android:background="@mipmap/topic_square_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/icon_back_white"/>

                <ImageView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/share_white"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_topic_name"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="南昌杀妻抛尸案"
                        android:textSize="@dimen/sp_30"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_read_num"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="233.5w"/>

                        <TextView
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阅读"/>

                        <TextView
                            android:id="@+id/tv_move_num"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="16.8w"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:text="动态"/>
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_alignParentRight="true"
            android:background="@mipmap/btn_login"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:text="关注"/>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/ll_title"
            android:textColor="@color/dark"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:text="动态"/>

        <TextView
            android:id="@+id/tv_sort_by_heat"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@id/view_line"
            android:layout_below="@id/ll_title"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按热度" />

        <View
            android:id="@+id/view_line"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/ll_title"
            android:layout_toLeftOf="@+id/tv_sort_by_time"
            android:layout_width="1dip"
            android:layout_height="@dimen/dp_20"
            android:background="@color/dark"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_sort_by_time"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_title"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按时间"
            />
        <View
            android:id="@+id/view_line2"
            android:layout_below="@id/view_line"
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/textColorHint"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_topic_square"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_join_now"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textBlue"
            android:textColor="@color/colorAccent"
            android:text="立即参与"/>

    </RelativeLayout>
</layout>
