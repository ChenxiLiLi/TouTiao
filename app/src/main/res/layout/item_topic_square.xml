<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_avater"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/avater"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="油条"/>

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/textBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="福州市"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:textColor="@color/textGrey"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每天一个恐婚小技巧"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_180"
                android:src="@mipmap/cat"/>

            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_180"
                android:src="@mipmap/cat"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/iv_love"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:src="@drawable/topic_love"/>

            <TextView
                android:id="@+id/tv_love_num"
                android:layout_toRightOf="@id/iv_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="330"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_10"/>

            <ImageView
            android:id="@+id/iv_comment"
            android:layout_toRightOf="@id/iv_love"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:src="@mipmap/empty_comment"/>

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_toRightOf="@id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_10"/>


            <ImageView
                android:id="@+id/iv_share"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/share"/>

        </RelativeLayout>

        <View
            android:background="@color/dark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

    </LinearLayout>

</layout>
