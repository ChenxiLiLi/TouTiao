<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/dark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/video_pic1"/>

        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@id/layout_love"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/publisher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="@浙江观察"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="玛莎拉蒂撞人案最新进展，肇事者：赔偿457万，受害者家属
        ：不接受，判她死刑！"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/heart"/>

            <TextView
                android:id="@+id/tv_love_num"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.7万"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_avater"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/layout_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/avater"/>

    </RelativeLayout>

</layout>