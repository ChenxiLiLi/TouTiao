<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.person.AuthorActivity">
    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/author_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:background="#02000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                style="@style/imageStyle_tab"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/dp_16"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:src="@mipmap/left_arrow" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="1">
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:text="叮当猫"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/dp_18">
            </TextView>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="1">
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_share"
                style="@style/imageStyle_tab"
                android:src="@mipmap/share"
                android:layout_width="0dp"
                android:layout_margin="@dimen/dp_16"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_10"
            >
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="@dimen/dp_15">
                <ImageView
                    android:id="@+id/avater"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@mipmap/avater"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fans"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fans_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#E1000000"
                    android:text="12万"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:gravity="center"
                    android:text="粉丝"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/focus"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/focus_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#E1000000"
                    android:text="28"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:gravity="center"
                    android:text="关注"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <Button
                    android:id="@+id/btn_focus"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@mipmap/btn_all_blue"
                    android:text="关注"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <Button
                    android:id="@+id/btn_chat"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@mipmap/btn_all_blue"
                    android:text="私聊"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10">
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:text="滑板鞋******新闻社实习生。我们不生产新闻，我们只是新闻的搬运工。"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#1D000000" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bytedance.toutiao.ui.view.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</layout>