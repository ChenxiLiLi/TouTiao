<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top_event"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:background="#02000000"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{onClickListener}"
                android:clickable="true"
                android:tag="3">
                <ImageView
                    style="@style/imageStyle_tab"
                    android:src="@mipmap/left_arrow"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{onClickListener}"
                android:clickable="true"
                android:tag="1">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:onClick="@{onClickListener}"
                android:clickable="true"
                android:tag="0">
                <TextView
                    android:gravity="center"
                    android:text="相似事件"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_22"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{onClickListener}"
                android:clickable="true"
                android:tag="1">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{onClickListener}"
                android:clickable="true"
                android:tag="3">
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_event"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <view
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="0">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="相似事件一"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:textSize="@dimen/dp_18"></TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="2">
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="3">
                        <ImageView
                            android:tint="#bbbbbb"
                            style="@style/imageStyle_tab"
                            android:src="@mipmap/right_arrow"
                            android:layout_width="@dimen/dp_19"
                            android:layout_height="@dimen/dp_19"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <view
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="0">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="相似事件二，那就顺便看看标题长度超出展示框时候的情况吧"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:textSize="@dimen/dp_18"></TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="2">

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="3">
                        <ImageView
                            android:tint="#bbbbbb"
                            style="@style/imageStyle_tab"
                            android:src="@mipmap/right_arrow"
                            android:layout_width="@dimen/dp_19"
                            android:layout_height="@dimen/dp_19"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <view
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="0">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="相似事件三"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:textSize="@dimen/dp_18"></TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        android:tag="2">

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{onClickListener}"
                        android:clickable="true"
                        >
                        <ImageView
                            android:tint="#bbbbbb"
                            style="@style/imageStyle_tab"
                            android:src="@mipmap/right_arrow"
                            android:layout_width="@dimen/dp_19"
                            android:layout_height="@dimen/dp_19"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <view
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>